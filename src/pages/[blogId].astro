---
import Layout from "../layouts/Layout.astro";
import { getBlogList, getBlogDetail } from "../libs/microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogList({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

// 記事の詳細情報を取得
const { blogId } = Astro.params;
const draftKey = Astro.url.searchParams.get("dk") ?? undefined;
const blog = await getBlogDetail(blogId as string, { draftKey });
---

<Layout>
  <main class="main">
    <h1 class="title">{blog.title}</h1>
    <ul>
      {
        blog?.tags.map((tag) => (
          <li>{tag.name}</li>
        ))
      }
    </ul>
    <p class="publishedAt">公開日時：{blog.publishedAt}</p>
    <img class="thumbnail" src={blog.thumbnail.url} alt="" />
    <div class="post" set:html={blog.body}></div>
  </main>
</Layout>

<style>
  .main {
    margin: 0 auto;
    max-width: 960px;
  }
  .thumbnail {
    width: 100%;
  }
</style>